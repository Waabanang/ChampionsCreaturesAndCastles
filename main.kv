<SplashScreen>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.5, 1)
            spacing: 10

            Label:
                size_hint_y: 0.4
                text: 'Champions!\n Creatures!\n Castles!\n'
                valign: 'bottom'
                halign: 'center'
                bold: True
                font_size: 60
                padding: 0, 0

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_y: 0.3

                BoxLayout:
                    size_hint: 0.3, 0.3
                    orientation: 'vertical'

                    Button:
                        halign: 'center'
                        valign: 'middle'
                        text: 'Play'
                        on_press: root.manager.current = 'character_select_screen'

<CharSelectScreen>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: 0.3, 0.3
            pos_hint: 0.3, 0.5
            orientation: 'vertical'

            Button:
                valign: 'middle'
                halign: 'center'
                text: 'Warrior'
                on_press: root.select_character('warrior')

            Button:
                valign: 'middle'
                halign: 'center'
                text: 'Rogue'
                on_press: root.select_character('rogue')

            Button:
                valign: 'middle'
                halign: 'center'
                text: 'Mage'
                on_press: root.select_character('mage')

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint_y: 0.1

        BoxLayout:
            size_hint: 0.3, 0.3
            orientation: 'vertical'

            Button:
                halign: 'center'
                valign: 'middle'
                text: 'Level Select'
                on_press: root.go_to_level_select()

<LevelSelectScreen>
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: 0.3, 0.3
            pos_hint: 0.3, 0.5
            orientation: 'vertical'

            Button:
                valign: 'middle'
                halign: 'center'
                text: 'Barrels of Fun'
                on_press: root.select_level('barrels_of_fun')
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint_y: 0.1

        BoxLayout:
            size_hint: 0.3, 0.3
            orientation: 'vertical'

            Button:
                halign: 'center'
                valign: 'middle'
                text: 'Game Start!'
                on_press: root.start_game()
<Player>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size

